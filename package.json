{
  "name": "embroidery-desktop",
  "version": "1.0.2",
  "description": "EmbroideryTech Desktop Management Application",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "npx electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "backend": "cd desktop-backend && npm start",
    "dev": "concurrently \"npm run backend\" \"npm run electron-dev\"",
    "install-all": "npm install && cd desktop-backend && npm install",
    "build-electron": "npm run build && electron-builder",
    "build-windows": "npm run build && electron-builder --win",
    "build-installer": "npm run build && electron-builder --win --publish=never",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "npm run build && electron-builder --dir",
    "create-installer": "npm run build && electron-builder --win nsis --publish=never",
    "publish": "npm run build && electron-builder --win --publish=always",
    "publish-draft": "npm run build && electron-builder --win --publish=draft",
    "release": "npm run build && electron-builder --win --publish=always",
    "create-release": "node scripts/release.js"
  },
  "build": {
    "appId": "com.embroiderytech.desktop",
    "productName": "EmbroideryTech Management System",
    "copyright": "Copyright Â© 2024 EmbroideryTech",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "src/main.js",
      "package.json",
      "desktop-backend/**/*"
    ],
    "extraResources": [
      {
        "from": "desktop-backend",
        "to": "desktop-backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build-resources/logo256.png",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false,
      "publisherName": "EmbroideryTech",
      "fileAssociations": [
        {
          "ext": "emb",
          "name": "EmbroideryTech Project",
          "description": "EmbroideryTech Management Project File"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EmbroideryTech Management",
      "license": "LICENSE",
      "language": "1033",
      "perMachine": false,
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "menuCategory": "EmbroideryTech",
      "artifactName": "EmbroideryTech-Management-Setup-${version}.${ext}",
      "uninstallDisplayName": "EmbroideryTech Management System"
    },
    "portable": {
      "artifactName": "EmbroideryTech-Management-Portable-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "embroiderytech",
      "repo": "embroidery-desktop",
      "private": false,
      "releaseType": "release"
    }
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "electron-is-dev": "^2.0.0",
    "jspdf": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.1",
    "react-scripts": "5.0.1",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.6.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "embroidery",
    "desktop",
    "management",
    "electron",
    "react",
    "installer",
    "windows"
  ],
  "author": "EmbroideryTech",
  "license": "ISC"
}