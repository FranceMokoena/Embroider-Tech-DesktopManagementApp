{
  "name": "embroidery-desktop",
  "version": "1.0.0",
  "description": "EmbroideryTech Desktop Management Application",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "npx electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "backend": "cd desktop-backend && npm start",
    "dev": "concurrently \"npm run backend\" \"npm run electron-dev\"",
    "install-all": "npm install && cd desktop-backend && npm install",
    "build-electron": "npm run build && electron-builder",
    "build-windows": "npm run build && electron-builder --win",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "npm run build && electron-builder --dir"
  },
  "build": {
    "appId": "com.embroiderytech.desktop",
    "productName": "Embroidery Tech Management",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main.js",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Embroidery Tech Management"
    }
  },
  "dependencies": {
    "electron": "^28.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-builder": "^24.6.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": ["embroidery", "desktop", "management", "electron", "react"],
  "author": "Embroidery Tech",
  "license": "ISC"
}
